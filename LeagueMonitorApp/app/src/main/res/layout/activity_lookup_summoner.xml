<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codingslash.leaguemonitorapp.LookupSummonerActivity">

    <ImageView android:id="@+id/display_summoner_profile_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"

        android:src="@mipmap/poro_placeholder" />

    <TextView android:id="@+id/display_summoner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/display_summoner_profile_icon"

        android:text="SUMMONER_NAME" />

    <TextView android:id="@+id/display_summoner_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/display_summoner_profile_icon"
        android:layout_below="@+id/display_summoner_name"

        android:text="SUMMONER_LEVEL" />

    <TextView android:id="@+id/display_summoner_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/display_summoner_profile_icon"
        android:layout_below="@+id/display_summoner_level"

        android:text="SUMMONER_ID" />

</RelativeLayout>
