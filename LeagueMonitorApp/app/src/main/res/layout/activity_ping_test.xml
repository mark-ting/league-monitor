<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.codingslash.leaguemonitorapp.PingTestActivity">

    <TextView android:text="@string/text_ping_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_ping_time"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/riot_server_region_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_ping_test"
        android:id="@+id/button_ping_test"
        android:onClick="runPingTest"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/text_ping_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/riot_server_region_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

</RelativeLayout>
